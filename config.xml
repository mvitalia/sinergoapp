<?xml version='1.0' encoding='utf-8'?>
<widget id="sinergo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sinergo Servizi</name>
    <description>
        App Sinergo Servizi: Corsi di formazione, promozioni e accesso analisi.
    </description>
	<icon  src="icon.png"  />
    <author email="p.guglielmo@mvitalia.com" href="http://www.mvitalia.com/">
        MVItalia team
    </author>
    <content src="index.html" />
    
	<access origin="http://www.sinergoservizi.com*"  />
	
	<js-module src="js/AdmobPlugin.js" name="AdmobAd">
        <clobbers target="window.admobAd"/>
    </js-module>
	<platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="AdmobPlugin" >
                <param name="android-package" value="com.admob.cordova.plugin.AdmobAdPlugin"/>
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
           <meta-data  android:name="com.google.android.gms.version"   android:value="4452000"/>
			<activity  android:name="com.google.android.gms.ads.AdActivity"  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
             <uses-permission android:name="android.permission.INTERNET"/>
			    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
			    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
        </config-file>
        
        <source-file src="src/android/libs/google-play-services.jar" target-dir="libs/"/>
    </platform>
	<platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="AdmobPlugin">
                <param name="ios-package" value="AdmobAdPlugin"/>
            </feature>
        </config-file>
        <source-file  src="src/ios/AdmobAdPlugin.m"/>
        <header-file  src="src/ios/AdmobAdPlugin.h"/>
    <!--    <framework src="src/ios/AdmobMobAPI.framework" custom="true"/>-->
 <framework src="src/ios/AdmobAPI.framework" custom="true"/>
 
  		<framework src="EventKit.framework"/>
        <framework src="EventKitUI.framework"/>
        <framework src="StoreKit.framework"/>
        <framework src="AdSupport.framework"/>
        <framework src="MessageUI.framework"/>
        <framework src="AVFoundation.framework"/>
        <framework src="Foundation.framework"/>
        <framework src="UIKit.framework"/>
        <framework src="CoreGraphics.framework"/>
        <framework src="SystemConfiguration.framework"/>
        <framework src="AudioToolbox.framework"/>
    </platform>
</widget>
