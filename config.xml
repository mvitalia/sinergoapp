<?xml version='1.0' encoding='utf-8'?>
<widget id="sinergo" version="0.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sinergo Servizi</name>
    <description>
        App Sinergo Servizi: Corsi di formazione, promozioni e accesso analisi.
    </description>
	<icon  src="icon.png"  />
	<icon src="icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icon-57@2x.png" gap:platform="ios" width="114" height="114" />
	<!-- iPhone / iPod Touch  -->
	<icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="icon-60@2x.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	<icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icon-72@2x.png" gap:platform="ios" width="144" height="144" />
	<icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />
	
	<!-- Settings Icon -->
	<icon src="icon-small-40.png" gap:platform="ios" width="29" height="29" />
	<icon src="icon-small-40@2x.png" gap:platform="ios" width="58" height="58" />
	
	<!-- Spotlight Icon -->
	<icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="icon-40@2x.png" gap:platform="ios" width="80" height="80" />
    <author email="p.guglielmo@mvitalia.com" href="http://www.mvitalia.com/">
        MVItalia team
    </author>
	
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	
	<preference name="phonegap-version" value="3.5.0" />
	<preference name="fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
	<preference name="LoadUrlTimeoutValue" value="10000"/>
	<preference name="LoadingDialog" value="Please wait, the app is loading"/>
	<preference name="AllowInlineMediaPlayback" value="true"/>
	<preference name="SplashScreenDelay" value="7000"/>
	
	<!-- iPhone and iPod touch -->
	<gap:splash src="splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
	
    <content src="index.html" />
	
	<gap:plugin name="org.apache.cordova.inappbrowser"  />
	<access origin="*"  />

	
</widget>
