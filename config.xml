<?xml version='1.0' encoding='utf-8'?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          = "com.sinergo.servizi"
        versionCode = "10" 
        version     = "0.1.2" >
		
		
		
    <name>Sinergo Servizi</name>
    <description>
        App Sinergo Servizi: Corsi di formazione, promozioni e accesso analisi.
    </description>
	<icon  src="icon.png"  />
	<icon src="icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icon-57@2x.png" gap:platform="ios" width="114" height="114" />
	<!-- iPhone / iPod Touch  -->
	<icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="icon-60@2x.png" gap:platform="ios" width="120" height="120" />

	<!-- iPad -->
	<icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icon-72@2x.png" gap:platform="ios" width="144" height="144" />
	<icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />
	
	<!-- Settings Icon -->
	<icon src="icon-small-40.png" gap:platform="ios" width="29" height="29" />
	<icon src="icon-small-40@2x.png" gap:platform="ios" width="58" height="58" />
	
	<!-- Spotlight Icon -->
	<icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="icon-40@2x.png" gap:platform="ios" width="80" height="80" />
    <author email="p.guglielmo@mvitalia.com" href="http://www.mvitalia.com/">
        MVItalia team
    </author>
	
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	
	<preference name="phonegap-version" value="3.5.0" />
	<preference name="fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
	<preference name="LoadUrlTimeoutValue" value="10000"/>
	<preference name="LoadingDialog" value="Please wait, the app is loading"/>
	<preference name="AllowInlineMediaPlayback" value="true"/>
	<preference name="SplashScreenDelay" value="7000"/>
	
	<preference name="KeepRunning" value="true"/>
	
	
	<gap:splash src="splash.png"/>
	
	<gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:qualifier="port-ldpi" />
	<gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:qualifier="port-mdpi" />
	<gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:qualifier="port-hdpi" />
	<gap:splash src="splash/android/xhdpi.png" gap:platform="android" gap:qualifier="port-xhdpi" />
	<gap:splash src="splash/android/xxhdpi.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
	
	<gap:splash src="splash/android/ldpi_landscape.png" gap:platform="android" gap:qualifier="land-ldpi" />
	<gap:splash src="splash/android/mdpi_landscape.png" gap:platform="android" gap:qualifier="land-mdpi" />
	<gap:splash src="splash/android/hdpi_landscape.png" gap:platform="android" gap:qualifier="land-hdpi" />
	<gap:splash src="splash/android/xhdpi_landscape.png" gap:platform="android" gap:qualifier="land-xhdpi" />
	
	<!-- iPhone and iPod touch -->
	<gap:splash src="splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />

	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="splash/ios/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
	
	<!--Plugins-->
	<gap:plugin name="org.apache.cordova.camera" />
	<gap:plugin name="org.apache.cordova.media-capture" />
	<gap:plugin name="org.apache.cordova.device"  />
	<gap:plugin name="org.apache.cordova.device-orientation" />
	<gap:plugin name="org.apache.cordova.console" />
	<gap:plugin name="org.apache.cordova.contacts" />
	<gap:plugin name="org.apache.cordova.device-motion" />
	<gap:plugin name="org.apache.cordova.file" />
	<gap:plugin name="org.apache.cordova.file-transfer" />
	<gap:plugin name="org.apache.cordova.network-information" />
	<gap:plugin name="org.apache.cordova.media" />
	<gap:plugin name="org.apache.cordova.inappbrowser"  />
	<gap:plugin name="org.apache.cordova.globalization" />
	<gap:plugin name="org.apache.cordova.dialogs" />
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:plugin name="org.apache.cordova.vibration" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
	
	<gap:plugin name="info.ivanezko.phonegap.smsplugin" version="0.2.1" />
	
	<gap:config-file platform="android" parent="/manifest">
		<supports-screens 
			android:xlargeScreens="false" 
			android:largeScreens="false" 
			android:smallScreens="false" />
	</gap:config-file>
	
	<gap:config-file platform="ios" parent="UISupportedInterfaceOrientations" overwrite="true">
    <array>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
</gap:config-file>
	
	<access origin="*" />

	
</widget>
